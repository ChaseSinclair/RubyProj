<%= content_for(:title, "Games") %>

<div class="panel panel-default">
  <div class="panel-heading">Games</div>
  <table class="table">
    <thead><tr> <th>Score</th> <th>Date</th> <th>Location</th> </tr></thead>
    <tbody>
      <% @games.each do |game| %>
      <tr>
        <td><a href="<%= game_path(game.id) %>"><%= game.score %></a></td>
        <td><%= game.date %></td>
        <td><%= game.location %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
